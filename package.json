{
	"name": "one-tab-run",
	"displayName": "One Tab Run",
	"description": "",
	"publisher": "JiuMengDZ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:OneTabRun"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "OneTapRun.AddItem",
				"category": "ONE TAB RUN",
				"title": "Add",
				"icon" : {
					"light" : "resources/icons/add-light.svg",
					"dark" : "resources/icons/add.svg"
				}
			},
			{
				"command": "OneTapRun.DeleteItem",
				"category": "ONE TAB RUN",
				"title": "Delete"
			},
			{
				"command": "OneTapRun.RunItem",
				"category": "ONE TAB RUN",
				"title": "Run",
				"icon" : {
					"light" : "resources/icons/run-light.svg",
					"dark" : "resources/icons/run.svg"
				}
			},
			{
				"command": "OneTapRun.Edit",
				"category": "ONE TAB RUN",
				"title": "Edit",
				"icon" : {
					"light" : "resources/icons/edit-light.svg",
					"dark" : "resources/icons/edit.svg"
				}
			}
		],
		"views": {
			"package-explorer": [
				{
					"id": "OneTabRun",
					"name": "ONE TAB RUN"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "OneTapRun.Edit",
					"when": "view == OneTabRun",
					"group": "inline"
				},
				{
					"command": "OneTapRun.RunItem",
					"when": "view == OneTabRun",
					"group": "inline"
				},
				{
					"command": "OneTapRun.DeleteItem",
					"when": "view == OneTabRun"
				}
			],
			"view/title": [
				{
					"command": "OneTapRun.AddItem",
					"when": "view == OneTabRun",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "ONE TAB RUN",
					"icon": "resources/icons/item.svg"
				}
			]
		},
		"configuration" :[
			{
				"title": "OneTabRun",
				"properties": {
					"OneTabRun.paths" : {
						"type" : "object",
						"default": {}
					}
				}
			}
		],
		"viewsWelcome": [
			{
				"view": "OneTabRun",
				"contents": "No Items Please Click for Add\n[Add Item](command:OneTapRun.AddItem)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
